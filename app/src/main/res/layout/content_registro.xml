<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedddd"
    >

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:layout_weight="428.86">

                <TextView
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:id="@+id/textView4"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="52dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:maxLength="60"
                    android:id="@+id/etRNombre" />

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:text="Apellido"
                    android:id="@+id/textView5"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:maxLength="60"
                    android:id="@+id/etRApellido" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:layout_weight="121.53">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:id="@+id/textView6"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:maxLength="125"
                    android:id="@+id/etREmail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre usuario"
                    android:id="@+id/textView14"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:maxLength="125"
                    android:id="@+id/textNombreUsuario" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ContraseÃ±a"
                    android:id="@+id/textView7"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:maxLength="20"
                    android:id="@+id/etRPass" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:background="#fefefe"
                android:layout_weight="74.07">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:id="@+id/textView8"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:maxLength="11"
                    android:id="@+id/etRTel" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="10dp"
                android:layout_weight="18.15">

                <Button
                    android:layout_width="239dp"
                    android:layout_height="38dp"
                    android:text="Registrarme"
                    android:id="@+id/btnRegistrar"
                    android:layout_gravity="center_horizontal"
                    android:onClick="onClickRegistrar"
                     android:background="@color/colorPrimary"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="133dp"
                    android:text="Al inscribirme acepto las Politicas de Privacidad y Los Terminos Y condiciones de Shannon "
                    android:id="@+id/textView9" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>